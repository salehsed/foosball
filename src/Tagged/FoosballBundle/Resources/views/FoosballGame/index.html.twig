{% extends '::base.html.twig' %}

{% block body -%}
    <h1>FoosballGame list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Player1</th>
                <th>Player1_score</th>
                <th>Player2</th>
                <th>Player2_score</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.player1 }}</td>
                <td>{{ entity.player1score }}</td>
                <td>{{ entity.player2 }}</td>
                <td>{{ entity.player2score }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('_new') }}">
                Create a new entry
            </a>
        </li>
        <li>
            <form action="{{ path('_upload') }}" method="post" enctype="multipart/form-data">
                Select file
                <input type="file" name="file" id="file" />
                <input type="submit" name="submit" />
            </form>
        
        </li>
    </ul>
    {% endblock %}
